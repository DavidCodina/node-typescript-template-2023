{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext", // "ESNEXT"
    "allowJs": true,
    "checkJs": false,
    // Useful for libraries, but not needed here.
    "declaration": false,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "moduleResolution": "NodeNext",
    "baseUrl": "src",
    "paths": {
      "utils/*": ["utils/*"]
    },
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.*", "**/*.spec.*", "__tests__"]
}
